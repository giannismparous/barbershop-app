<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Activity.ChooseService">

    <TextView

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BarberShop"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"

        />


    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="80dp"

        android:text="Service"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <Button
        android:id="@+id/haircut"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"

        android:text="HAIRCUT"
        android:textColor="#ffffff"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/logo"

        app:layout_constraintLeft_toLeftOf="parent"

        />

    <Button
        android:id="@+id/shaving"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"

        android:text="SHAVING"
        android:textColor="#ffffff"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/haircut"

        app:layout_constraintLeft_toLeftOf="parent"

        />

    <Button
        android:id="@+id/hair_dye"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"

        android:text="HAIR DYE"
        android:textColor="#ffffff"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/shaving"

        app:layout_constraintLeft_toLeftOf="parent"

        />

    <Button
        android:id="@+id/massage"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"

        android:text="Massage"
        android:textColor="#ffffff"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/hair_dye"

        app:layout_constraintLeft_toLeftOf="parent"

        />


    <Button
        android:id="@+id/back"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"

        android:text="Back"
        android:textColor="#ffffff"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/massage"

        app:layout_constraintLeft_toLeftOf="parent"

        />





</androidx.constraintlayout.widget.ConstraintLayout>