<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".Statistics">

    <TextView

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BarberShop"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"

        />


    <TextView
        android:id="@+id/statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="80dp"

        android:text="Statistics"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <TextView
        android:id="@+id/avrg_evaluation"
        android:layout_width="219dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="116dp"
        android:ems="10"

        android:hint="Average Evaluation :"

        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo"


        />

    <TextView
        android:id="@+id/avrg_evaluation_Info"

        android:layout_width="162dp"
        android:layout_height="30dp"
        android:layout_marginTop="124dp"
        android:ems="10"

        android:textSize="20sp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo"


        />

    <TextView
        android:id="@+id/openApp"
        android:layout_width="219dp"
        android:layout_height="41dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Current Open App:"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@+id/avrg_evaluation"

        />

    <TextView
        android:id="@+id/OpenAppInfo"

        android:layout_width="163dp"
        android:layout_height="33dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="4dp"
        android:ems="10"

        android:hint=""

        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="@+id/avrg_evaluation_Info" />

    <TextView
        android:id="@+id/completeApp"
        android:layout_width="285dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Current Completed App :"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@+id/openApp"


        />


    <TextView
        android:id="@+id/completeAppInfo"

        android:layout_width="97dp"
        android:layout_height="32dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint=""

        android:textSize="20sp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/OpenAppInfo"


        />

    <TextView
        android:id="@+id/totalValue"
        android:layout_width="234dp"
        android:layout_height="39dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Current Total Value :"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/completeApp"

        />


    <TextView
        android:id="@+id/totalValueInfo"

        android:layout_width="151dp"
        android:layout_height="36dp"
        android:layout_marginTop="56dp"
        android:layout_marginRight="4dp"
        android:ems="10"

        android:hint=""

        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="@+id/completeAppInfo" />

    <Button
        android:id="@+id/back"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"

        android:layout_marginTop="224dp"
        android:text="Back"

        android:textColor="#ffffff"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@+id/totalValueInfo" />


</androidx.constraintlayout.widget.ConstraintLayout>